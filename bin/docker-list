#!/usr/bin/env bash

set -e

# ANSI_RED="\033[31m"
# ANSI_GREEN="\033[32m"
# ANSI_YELLOW="\033[33m"
ANSI_BLUE="\033[34m"
ANSI_RESET="\033[0m"


CMDS=(
    'container ls -a'
    'image ls' # -a for intermediate images
    'volume ls'
    'network ls'
    'compose ls -a'
)
for cmd in "${CMDS[@]}"; do
    echo -e "> docker $ANSI_BLUE$cmd$ANSI_RESET"
    docker $cmd
    echo
done
