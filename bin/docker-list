#!/usr/bin/env bash

set -e

# ANSI_RED="\033[31m"
# ANSI_GREEN="\033[32m"
# ANSI_YELLOW="\033[33m"
ANSI_BLUE="\033[1;34m"
ANSI_GRAY="\033[38;5;247m"
ANSI_RESET="\033[0m"


CMDS=(
    'container ls -a'
    'image ls' # -a for intermediate images
    'volume ls'
    'network ls'
    'compose ls -a'
)
for cmd in "${CMDS[@]}"; do
    echo -e "$ANSI_GRAY>$ANSI_RESET docker $ANSI_BLUE$cmd$ANSI_RESET$ANSI_GRAY"
    docker $cmd
    echo -e "$ANSI_RESET"
done
