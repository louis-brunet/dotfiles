#!/usr/bin/env bash

set -e

# ANSI_RED="\033[31m"
# ANSI_GREEN="\033[32m"
# ANSI_YELLOW="\033[33m"
ANSI_BLUE="\033[1;34m"
ANSI_DARKGRAY="\033[38;5;241m"
ANSI_GRAY="\033[38;5;246m"
ANSI_RESET="\033[0m"


CMDS=(
    'container ls -a'
    'image ls' # -a for intermediate images
    'volume ls'
    'network ls'
    'compose ls -a'
)

for cmd in "${CMDS[@]}"; do
    printf "$ANSI_DARKGRAY>$ANSI_RESET docker $ANSI_BLUE%s$ANSI_RESET\n" "$cmd"

    docker_output="$(docker $cmd)"
    docker_table_header="$(echo "$docker_output" | head -n 1)"
    docker_table_body="$(echo "$docker_output" | tail -n +2)"

    if [ -n "$docker_table_body" ];then
        printf "$ANSI_DARKGRAY%s$ANSI_RESET\n" "$docker_table_header"
        printf "$ANSI_GRAY%s$ANSI_RESET\n" "$docker_table_body"
        echo
    fi
done
